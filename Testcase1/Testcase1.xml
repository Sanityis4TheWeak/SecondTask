<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="Libs\LibStub\LibStub.lua" />
	<Include file="Libs\CallbackHandler-1.0\CallbackHandler-1.0.xml" />
	<Include file="Libs\AceAddon-3.0\AceAddon-3.0.xml" />
	<Include file="Libs\AceConsole-3.0\AceConsole-3.0.xml" />
	<Include file="Libs\AceEvent-3.0\AceEvent-3.0.xml" />

	<Texture name="trainingTextureTemplate" file="Interface/Addons/Testcase1/resources/placeholder" virtual="true">
		<Size x="200" y="200" />
		<Anchors>
		<Anchor point="CENTER"/>
		</Anchors>
		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_CURSOR")
				GameTooltip:AddLine("This is testcase")
				GameTooltip:AddLine("Same")
				GameTooltip:Show()
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide()
			</OnLeave>
		</Scripts>
	</Texture>

	<Frame name="MainFrame" inherits="BackdropTemplate" parent="UIParent" hidden="true">
		<Size x="900" y="600"/>
		<Anchors>
		<Anchor point="CENTER"/>
		</Anchors>
		 <KeyValues><KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" keyType="string" type="global" /></KeyValues>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="FirstPic" inherits="trainingTextureTemplate">
				<Anchors>
					<Anchor point="LEFT" x="15"/>
				</Anchors>
				</Texture>
			<Texture parentKey="SecondPic" inherits="trainingTextureTemplate">
				<Anchors>
					<Anchor point="RIGHT" x="-15"/>
				</Anchors>
			</Texture>

			<Texture parentKey="SecondPic" inherits="trainingTextureTemplate">
			</Texture>

			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentCloseButton" inherits="UIPanelButtonTemplate">
			<Size x="30" y="30"/>
			<Anchors>
				<Anchor point="TOPRIGHT"/>
			</Anchors>
			<Scripts>
				<OnClick>
					MainFrame:Hide()
				</OnClick>
			</Scripts>
			</Button>

		</Frames>

	</Frame>

</Ui>
